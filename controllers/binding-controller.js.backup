var knex = require('../database/db');
var Promise = require('bluebird');

var getRandom = function(numChars) {
    var text = "";
    var possible = "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789";

    for(var i = 0; i < numChars; i++)
        text += possible.charAt(Math.floor(Math.random() * possible.length));
    
    return text;
}

mapping = {
    getUrl: function(req, res, next) {
        knex.select('url').from('url_bindings')
        .where('binding', req.params.binding)
        .limit(1).then((resp) => {
            if(resp.length < 1)
                res.render('response', { title: "URL not found!" });
            else {
                // res.render('response',
                // {
                //     title: "Found!",
                //     body: resp[0].url
                // });
                res.redirect(resp[0].url);
            }
        });
    },

    postUrl: function(req, res, next) {
        var url = req.body.url;
        var binding = getRandom(5);
        knex.insert({
                        url: url,
                        binding: binding
                    })
                    .into('url_bindings')
                    .catch((err) => {
                        var e = new Error(err);
                        e.status = 403;
                        console.error(err);
                        next();
                    }).then(res.render('response', {
                        title: url,
                        body: "http://localhost:3000/" + binding
                    }));
    }
}

module.exports = mapping;
